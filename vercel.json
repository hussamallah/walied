{
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://www.yourdomain.com/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "yourdomain.com"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
